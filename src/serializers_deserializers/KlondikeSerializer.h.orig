#include <Klondike.h>

#include <memory>

class KlondikeSerializer {
protected:
	std::shared_ptr<Klondike>& game;
	std::ostream& outputStream;
public:
	KlondikeSerializer(std::shared_ptr<Klondike>& g,
			std::ostream& os) :
		game(g),
		outputStream(os) {}
	virtual void serialize() = 0;
	virtual ~KlondikeSerializer() {}
};
